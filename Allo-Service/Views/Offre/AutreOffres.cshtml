@model IEnumerable<Offre>


<section class="w3l-grids-3 py-5">
    <div class="container py-md-5 py-3">
        <div class="row bottom_grids pt-md-3 text-left">
            @foreach (var offre in Model)
            {
                <div class="col-lg-4 col-md-6 mt-5">
                    <div class="grid-block scale-in-center">

                        <img src="/OffresImages/@offre.Photo" alt="Fournisseur Image" class="d-block w-100" style="height: 200px; object-fit: cover;">

                        <h5 class="my-3">@offre.Title</h5>

                        <hr class="my-2">
                        <!-- Description -->
                        <h6>
                            <i class="fas fa-file-alt me-2"></i> <!-- Suggested: fas fa-info-circle or fas fa-align-left -->
                            <strong>Description:</strong>
                            @offre.Description
                        </h6>

                        <hr class="my-2">

                        <h6>
                            <i class="fas fa-calendar-alt me-2"></i> <!-- Changed from fas fa-city to fas fa-calendar-alt -->
                            <strong>Date de Fin:</strong> @offre.DateDebut.ToString("dd MMM yyyy")
                        </h6>
                        <hr class="my-2">
                        <h6>
                            <i class="fas fa-calendar-alt me-2"></i> <!-- Changed from fas fa-city to fas fa-calendar-alt -->
                            <strong>Date de Fin:</strong> @offre.DateFin.ToString("dd MMM yyyy")
                        </h6>

                        <hr class="my-2">

                        <h6>
                            <i class="fas fa-city  me-2"></i>
                            <strong>ville:</strong> @offre.Fournisseur?.Ville.Name
                        </h6>

                        <hr class="my-2">
                        <!-- Price -->
                        <h6>
                            <i class="fas fa-dollar-sign"></i> <!-- Changed from fas fa-phone to fas fa-dollar-sign -->
                            <strong>Prix :</strong> @offre.Price dirham marrocain
                        </h6>

                        <hr class="my-2">
                        
                        <div class="btn-group d-flex justify-content-between align-items-center">

                            <button type="button" class="btn btn-sm btn-success message-btn"><i class="fas fa-comments pr-1"></i> Message</button>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>