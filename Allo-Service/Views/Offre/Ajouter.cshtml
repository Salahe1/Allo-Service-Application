@model OffreVM

@{
    Layout = "_FournisseurLayout";
}
@* data-parsley-validate *@



<section class="w3l-grids-3 py-5">
    <div class="container py-md-5 py-3">
        <form id="demo-form2" asp-action="Ajouter" asp-controller="Offre"  class="form-horizontal form-label-left" method="post" enctype="multipart/form-data">

            <div class="item form-group row mb-4">
                <label class="col-form-label col-md-3 col-sm-3 label-align text-center" asp-for="Titre"></label>
                <div class="col-md-6 col-sm-9">
                    <input asp-for="Titre" class="form-control radius-image" placeholder="Enter title">
                    <span asp-validation-for="Titre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-4">
                <label class="col-form-label col-md-3 col-sm-3 label-align text-center" asp-for="Photo"></label>
                <div class="col-md-6 col-sm-9">
                    <input type="file" asp-for="Photo"  class="form-control radius-image">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>

            <div class="item form-group row mb-4">
                <label class="col-form-label col-md-3 col-sm-3 label-align text-center" asp-for="Description"></label>
                <div class="col-md-6 col-sm-9">
                    <textarea asp-for="Description" class="form-control radius-image" rows="5" placeholder="Enter description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="item form-group row mb-4">
                <label class="col-form-label col-md-3 col-sm-3 label-align text-center" asp-for="DateDebut"> Date de Debut</label>
                <div class="col-md-6 col-sm-9">
                    <input asp-for="DateDebut" type="date" class="form-control radius-image">
                    <span asp-validation-for="DateDebut" class="text-danger"></span>
                </div>
            </div>

            <div class="item form-group row mb-4">
                <label class="col-form-label col-md-3 col-sm-3 label-align text-center" asp-for="DateFin">Date de Fin</label>
                <div class="col-md-6 col-sm-9">
                    <input asp-for="DateFin" type="date" class="form-control radius-image">
                    <span asp-validation-for="DateFin" class="text-danger"></span>
                </div>
            </div>


            <div class="item form-group row mb-4">
                <label class="col-form-label col-md-3 col-sm-3 label-align text-center" asp-for="Prix"></label>
                <div class="col-md-6 col-sm-9">
                    <input asp-for="Prix" class="form-control radius-image" placeholder="Enter price">
                    <span asp-validation-for="Prix" class="text-danger"></span>
                </div>
            </div>
            <div class="ln_solid mb-4"></div>

            <div class="item form-group row">
                <div class="col-md-6 col-sm-9 offset-md-3">
                    <input type="submit"  class="btn btn-style btn-primary btn-block" asp-action="Ajouter" asp-controller="Offre">
                </div>
            </div>
        </form>
    </div>
</section>
