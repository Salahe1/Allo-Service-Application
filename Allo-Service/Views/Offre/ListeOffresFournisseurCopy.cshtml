@model IEnumerable<Offre>
@{
    Layout = "_FournisseurLayout";
}

<section class="w3l-grids-3 py-5">
    <div class="container py-md-5 py-3">
        <div class="row bottom_grids pt-md-3 text-left">

            <div class="btn-group d-flex justify-content-end align-items-center pb-3">
                <form>             
                    <button  asp-controller="Offre" asp-action="Ajouter" class="btn btn-sm btn-success message-btn">
                    <i class="fas fa-plus pr-1"></i> Ajouter</button>
                </form>

            </div>

             @if (Model == null || !Model.Any())
            {
                <div class="col-12 text-center">
                    <div class="alert alert-warning">
                        <strong>Pas des offres pour cette fournisseur pour le moment</strong>
                    </div>
                </div>
            }
            else
            {
            @foreach (var offre in Model)
            {
                <div class="col-lg-4 col-md-6 mt-5">
                    <div class="grid-block scale-in-center">

                        <img src="/OffresImages/@offre.Photo" alt="Fournisseur Image" class="d-block w-100" style="height: 200px; object-fit: cover;">

                        <h5 class="my-3">@offre.Title</h5>

                        <hr class="my-2">
                        <!-- Description -->
                        <h6>
                            <i class="fas fa-file-alt me-2"></i> <!-- Suggested: fas fa-info-circle or fas fa-align-left -->
                            <strong>Description:</strong>                                @offre.Description
                        </h6>
                        <hr class="my-2">
                        <h6>
                            <i class="fas fa-calendar-alt me-2"></i> <!-- Changed from fas fa-city to fas fa-calendar-alt -->
                            <strong>Date de Début:</strong> @offre.DateDebut.ToString("dd MMM yyyy")
                        </h6>
                        <hr class="my-2">
                        <h6>
                            <i class="fas fa-calendar-alt me-2"></i> <!-- Changed from fas fa-city to fas fa-calendar-alt -->
                            <strong>Date de Fin:</strong> @offre.DateFin.ToString("dd MMM yyyy")
                        </h6>
                        <hr class="my-2">

                        <h6>
                            <i class="fas fa-city  me-2"></i>
                            <strong>ville:</strong> @offre.Fournisseur?.Ville.Name

                        </h6>

                        <hr class="my-2">
                        <!-- Price -->
                        <h6>
                            <i class="fas fa-dollar-sign"></i> <!-- Changed from fas fa-phone to fas fa-dollar-sign -->
                            <strong>Prix :</strong> @offre.Price dirham marrocain
                        </h6>
                        <hr class="my-2">

                        <div class="btn-group d-flex justify-content-between align-items-center">
                                <form method="get" asp-controller="Offre" asp-action="Modifier">
                                    <input type="hidden" name="id" value="@offre.Id" />
                              <button  class="btn btn-sm btn-success message-btn"><i class="fas fa-comments pr-1"></i> Modifier</button>
                               </form>
                        <button type="button" class="btn btn-sm btn-primary ml-1 pr-4"><i class="fas fa-eye pr-1"></i> Supprimer</button>
                       
                        </div>
                    </div>
                </div>
            }
            }
        </div>
    </div>
</section>
