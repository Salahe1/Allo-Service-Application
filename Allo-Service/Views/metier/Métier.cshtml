<section class="w3l-grids-3 py-5">
    <div class="container py-md-5 py-3">
        <div class="row bottom_grids pt-md-3 text-left">
            @foreach (var metier in Model)
            {
                <div class="col-lg-4 col-md-6 mt-5">

                    <div class="grid-block scale-in-center">
                   

                        <img src="/ImagesMétiers/@metier.Photo" alt="Fournisseur Image" class="d-block w-100 " style="height: 250px; object-fit: cover;">


                        <hr class="my-2">

                        <h5 class="pt-3 pb-3">
                            <i class="fas fa-briefcase me-2"></i>
                            <strong>Métier:</strong> @metier.Name
                        </h5>


                       <hr class="my-2">

                        <div class="btn-group d-flex justify-content-center  align-items-center pt-3 pb-3">
                            <form method="get" asp-controller="Fournisseur" asp-action="ListFournisseursMetier">
                                <input type="hidden" name="id" value="@metier.Id">
                                <button type="submit" class="btn btn-sm btn-success message-btn px-4">
                                    <i class="fas fa-user pr-1"></i> Fournisseurs</button>
                            </form>
                            <form method="get" asp-controller="Offre" asp-action="ListOffresMetier">
                                <input type="hidden" name="id" value="@metier.Id">
                                <button type="submit" class="btn btn-sm btn-primary ml-1 px-5">
                                    <i class="fas fa-eye pr-1"></i> Offres</button>
                            </form>
                        </div>
                    </div>
                </div>
              
            }

        </div>
    </div>
</section>

